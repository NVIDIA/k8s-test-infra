{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "namespace": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string",
                    "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                }
            }
        },
        "mockDriver": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        },
                        "pullPolicy": {
                            "type": "string",
                            "enum": [
                                "Always",
                                "IfNotPresent",
                                "Never"
                            ]
                        }
                    }
                },
                "gpuCount": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 16
                },
                "gpuModel": {
                    "type": "string"
                },
                "resources": {
                    "type": "object"
                },
                "nodeSelector": {
                    "type": "object"
                },
                "tolerations": {
                    "type": "array"
                }
            }
        },
        "containerToolkit": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "image": {
                    "type": "object"
                },
                "runtime": {
                    "type": "string",
                    "enum": [
                        "docker",
                        "containerd",
                        "crio"
                    ]
                },
                "runtimeClass": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "resources": {
                    "type": "object"
                },
                "nodeSelector": {
                    "type": "object"
                },
                "requireMockDriver": {
                    "type": "boolean"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "imagePullSecrets": {
                    "type": "array"
                },
                "securityContext": {
                    "type": "object"
                },
                "serviceAccount": {
                    "type": "object"
                },
                "rbac": {
                    "type": "object"
                }
            }
        },
        "nodeLabeling": {
            "type": "object",
            "properties": {
                "gpuPresent": {
                    "type": "boolean"
                },
                "pciPresent": {
                    "type": "boolean"
                }
            }
        },
        "debug": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "keepFailedPods": {
                    "type": "boolean"
                }
            }
        }
    }
}